<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scene1.courseMainController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="btncoursemaincc" mnemonicParsing="false" onAction="#openCourseEdit" text="新增/修改課程">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </Button>
            <Button fx:id="btncoursemaindelete" mnemonicParsing="false" onAction="#deleteCourse" text="刪除課程">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </Button>
            <Button fx:id="btncoursemaingrade" mnemonicParsing="false" text="成績管理" onAction="#openGradeList">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </Button>
        </items>
      </ToolBar>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="搜尋課程 : ">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="coursesearchfield" prefHeight="50.0" prefWidth="316.0" promptText="輸入課程名稱或是代號">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </TextField>
            <Button fx:id="coursesearchbtn" mnemonicParsing="false" onAction="#loadCourses" text="搜尋">
               <font>
                  <Font name="DFKai-SB" size="24.0" />
               </font>
            </Button>
         </children></HBox>
   </bottom>
   <center>
      <TableView fx:id="courseTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="courseid" minWidth="200.0" prefWidth="75.0" text="代號" />
            <TableColumn fx:id="coursename" minWidth="200.0" prefWidth="75.0" text="課程名稱" />
          <TableColumn fx:id="coursefan" minWidth="200.0" prefWidth="75.0" text="學分數" />
          <TableColumn fx:id="coursestate" minWidth="200.0" prefWidth="76.0" text="課程狀態" />
        </columns>
      </TableView>
   </center>
</BorderPane>
